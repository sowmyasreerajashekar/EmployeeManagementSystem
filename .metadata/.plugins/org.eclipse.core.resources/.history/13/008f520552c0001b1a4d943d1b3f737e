			final String INSERT_EMPLOYEE = "INSERT INTO emp_details "
					+ "(emp_id, emp_first_name, emp_last_name, emp_age, emp_salary, emp_designation ) "
					+ "VALUES (?,?,?,?,?,?)";

		} finally {
			// TODO: handle finally clause
		}
		getConnection();
	}

}

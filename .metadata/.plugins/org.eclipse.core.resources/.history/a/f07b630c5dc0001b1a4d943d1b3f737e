package com.employee.management.system.controller;


import java.io.File;
import java.util.ArrayList;
import java.util.List;

import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.nodes.Element;
import org.jsoup.select.Elements;

import com.employee.management.service.EmployeeService;
import com.employee.management.system.helper.EmployeeHelper;
import com.employee.management.system.vo.EmployeeVO;
/**
 * Employee controller class
 * @author Sowmyasree
 *
 */
public class EmployeeManagementController {
	
	
	/**
	 * Method to read Employee Data from HTML and 
	 * add it in DB
	 * @return
	 */
	public boolean processEmployeeDataFromHTML(String htmlPath) {
	      try {
	    	  EmployeeService empService  = new EmployeeService();
	    	  List<EmployeeVO> empList = new ArrayList<EmployeeVO>();
	    	  EmployeeHelper helper = new EmployeeHelper();
	    	  empList = helper.parseHTMLFile(htmlPath);
	    	  empService.validateEmployeeDetails(empList);
		} catch (Exception e) {
			System.out.println(e.getMessage());
		}
		return true;
	}

}
